{
  "expo": {
    "name": "Frontend-RadarApps",
    "slug": "Frontend-RadarApps",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-epaper.png",
      "resizeMode": "cover",
      "backgroundColor": "#1E4B8A"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Aplikasi membutuhkan akses ke galeri untuk mengunggah file.",
        "NSCameraUsageDescription": "Aplikasi membutuhkan akses ke kamera untuk mengambil foto.",
        "NSDocumentPickerUsageDescription": "Aplikasi membutuhkan akses ke dokumen untuk memilih file PDF."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "CAMERA"
      ],
      "package": "com.yourcompany.frontendradarapps"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font",
      "expo-image-picker",
      "expo-document-picker"
    ]
  }
}
